{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/I", "${workspaceFolder}/pieces",
                "/I", "${workspaceFolder}",
                "/Zi",
                "/Fd${workspaceFolder}/build\\",
                "/EHsc",
                "/nologo",
                "/Fo${workspaceFolder}/build\\",
                "/Fe${workspaceFolder}/build\\myprogram.exe",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/helpers.cpp",
                "${workspaceFolder}/pieces/piece.cpp",
                "${workspaceFolder}/pieces/knight.cpp",
                "${workspaceFolder}/pieces/bishop.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}